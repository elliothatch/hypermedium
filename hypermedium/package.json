{
	"name": "hypermedium",
	"version": "0.1.0",
	"description": "a blog platform for all!",
	"main": "build/index.js",
	"types": "declarations/index.d.ts",
	"bin": {
		"hypermedium": "./hypermedium.js"
	},
	"scripts": {
		"build": "node_modules/.bin/tsc",
		"clean": "node scripts/clean.js",
		"dev": "sift node demo/server/build/index.js",
		"debug": "node --inspect-brk demo/server/build/index.js",
		"docs": "typedoc",
		"start": "node demo/server/build/index.js",
		"test": "jest"
	},
	"author": {
		"name": "Elliot Hatch",
		"email": "elliot.hatch@gmail.com"
	},
	"license": "MIT",
	"jest": {
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(tsx?|ts?)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	},
	"dependencies": {
		"chokidar": "^3.6.0",
		"express": "^4.17.1",
		"fresh-validation": "^3.0.0",
		"freshlog": "^0.3.0",
		"fs-extra": "^9.0.1",
		"graphlib": "^2.1.8",
		"handlebars": "^4.7.6",
		"minimist": "^1.2.5",
		"path-to-regexp": "^6.2.0",
		"rxjs": "^6.6.2",
		"uri-template": "^1.0.1"
	},
	"devDependencies": {
		"@types/chokidar": "^2.1.3",
		"@types/express": "^4.17.7",
		"@types/fs-extra": "^9.0.1",
		"@types/graphlib": "^2.1.7",
		"@types/minimist": "^1.2.0",
		"@types/node": "^14.6.0",
		"schema-dts": "^1.1.0",
		"sift-cli": "^1.2.0",
		"typedoc": "^0.25.1",
		"typescript": "^5.2.2"
	}
}
